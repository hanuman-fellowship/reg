#/bin/sh
cd /home/sahadev/RetreatCenter
day=`date +%a`
f=/home/sahadev/RetreatCenter/grid.$day
gz=grid.$day.gz
rm -f $f $f.gz
cd root/static/grid
tar cvf $f *data.txt >grid.out 2>&1
gzip $f
ftp logicalpoetry.com <<EOF
cd backup
put $f.gz $gz 
quit
