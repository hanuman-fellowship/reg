PAT="$1"
rc=/var/www/src
echo '** Controller'
cd $rc/lib/RetreatCenter/Controller
grep -ir "$PAT" *.pm
echo
echo '** Database'
cd $rc/lib/RetreatCenterDB
grep -ir "$PAT" *.pm
echo
echo '** Scripts'
cd $rc/script
grep -ir "$PAT" *
echo
echo '** lib'
cd $rc/lib
grep -ir "$PAT" *.pm
grep -irH "$PAT" Date/*.pm
grep -irH "$PAT" Time/*.pm
echo
echo '** Reg Templates'
cd $rc/root/src
grep -irl "$PAT" */*.tt2
echo
echo '** Letter'
cd $rc/root/static/templates
grep -irl "$PAT" */*.tt2
