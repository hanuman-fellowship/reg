<html>
<head>
<meta charset='UTF-8'>
[% INCLUDE new_tt2/top_css_js.tt2 %]

<!-- page's JS -->
<script>
var fields = [
    { id: 'first', regexp: '\\S',
                    err: 'Missing First Name' },
    { id: 'last', regexp: '\\S',
                    err: 'Missing Last Name' },
    { id: 'email',  regexp: '^\\s*\\S+[@]\\S+\\s*\$',
                    err: 'Invalid Email address' },
    { id: 'phone',  regexp: '^[0-9 -.()]+\$',
                    err: 'Invalid Phone number' },
    { id: 'group_name',  regexp: '\\S',
                         err: 'Missing Group Name' },
    { id: 'event_name',  regexp: '\\S',
                         err: 'Missing Event Name' },
    { id: 'how_many',  regexp: '\\d+',
                         err: 'Missing Number of Participants' },
    { id: 'radio', name: 'comm', err: 'Phone or Zoom for Discovery Call?' },
    { id: 'dates',  regexp: '\\S',
                    err: 'Missing Dates' },
    { id: 'radio', name: 'flexdates', err: 'Are your dates flexible?' },
    { id: 'radio', name: 'group_type', err: 'What is your Group Type?' },
    { id: 'radio', name: 'retreat_type', err: 'What is the Event Type?' },
    { id: 'radio', name: 'needs', err: 'What are your technical and materials needs?' },
    { id: 'radio', name: 'vegetarian', err: 'Is vegetarian food okay for you?' },
    { id: 'learn',  regexp: '\\S',
                    err: 'How did you learn about Mount Madonna?' },
    { id: 'radio', name: 'mailing_list', err: 'May we add you to our mailing list?' }
];
function check_others() {
    return (
        other_check('gt', 'other_group_type', 'Missing Other Group Type')
        &&
        other_check('rt', 'other_retreat_type', 'Missing Other Event Type')
        &&
        other_check('on', 'other_needs', 'Missing Other Technical Needs')
        &&
        other_check('os', 'other_services', 'Missing Other Services')
        &&
        disable_submit()
    );
}
function disable_submit() {
    document.getElementById('submit').disabled = true;
    return true;
}
function other_check(n1, n2, msg) {
    if (document.getElementById(n1).checked == true) {
        var el = document.getElementById(n2);
        var regexp = new RegExp('\\S');
        if (! regexp.test(el.value)) {
            alert(msg);
            el.focus();
            return false;
        }
    }
    return true;
}
</script>
<script type='text/javascript' src='/static/js/check_fields.js'></script>

