#!/usr/bin/env perl
use strict;
use warnings;
use CGI;
my $q = CGI->new();
print $q->header();
print <<'EOH';
<style>
body {
    margin: .5in;
    font-size: 30pt;
}
</style>
EOH
my $fname = '/tmp/plain_style';
if (-f $fname) {
    unlink $fname or print "no unlink!!: $!";
    print "Using Enio, Lara, Robyn styling.";
}
else {
    open my $out, '>', $fname;
    close $out;
    print "Using Sahadev styling.";
}
