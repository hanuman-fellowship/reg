drop table if exists registration;
create table registration (
    id  integer primary key auto_increment,
    person_id integer,
    program_id integer,

    deposit integer,

    referral text,
    adsource text,
    kids text,      -- rather than 4 sep fields...
    comment text,
    confnote text,
    h_type text,
    h_name text,
    carpool text,
    hascar text,  -- 15

    arrived text,
    cancelled text,

    date_postmark text,
    time_postmark text,

    balance integer,

    date_start text,    -- if different from program start
    date_end text,      -- if different from program end
    early text,
    late text,

    ceu_license text,
    letter_sent text,

    status text,           -- Sponsor (in good standing), Life, or blank
    nights_taken integer,
    free_prog_taken text,

    house_id integer,      -- or 0 if no housing assigned yet or not needed
                           -- since own van or commuting
    cabin_room text,       -- 'cabin', 'room', or blank
    leader_assistant text, -- 'yes' if housing should be free
    pref1 text,            -- 1st housing preference
    pref2 text,            -- 2nd
    share_first text,
    share_last text,
    manual text,
    work_study text,
    work_study_comment text
);
drop table if exists reg_history;
create table reg_history (
    id integer primary key auto_increment,
    reg_id integer,
    user_id integer,
    the_date text,
    time text,
    what text
);
drop table if exists reg_charge;
create table reg_charge (
    id integer primary key auto_increment,
    reg_id integer,
    user_id integer,
    the_date text,
    time text,
    amount integer,
    what text,
    automatic text
);
drop table if exists reg_payment;
create table reg_payment (
    id integer primary key auto_increment,
    reg_id integer,
    user_id integer,
    the_date text,
    time text,
    amount integer,
    type text,       -- cc, check, cash, online
    what text
);
drop table if exists mmi_payment;
create table mmi_payment (
    id integer primary key auto_increment,
    person_id  integer,
    amount     integer,
    glnum      text,
    the_date   text,
    type       text,
    deleted    text,
    reg_id     integer,
    note       text
);
drop table if exists credit;
create table credit (
    id integer primary key auto_increment,
    person_id integer,
    reg_id integer,
    date_given text,
    amount integer,
    date_expires text,
    date_used text,
    used_reg_id integer
);
drop table if exists conf_history;
create table conf_history (
    id integer primary key auto_increment,
    reg_id integer,
    note text,
    user_id integer,
    the_date text,
    time text
);
