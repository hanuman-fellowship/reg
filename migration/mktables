drop table if exists people;
create table people (
    last   text,
    first  text,
    sanskrit text,
    addr1    text,
    addr2    text,
    city       text,
    st_prov      text,
    zip_post        text,
    country    text,
    akey text,
    tel_home      text,
    tel_work      text,
    tel_cell      text,
    email text,
    sex text,
    id integer primary key,
    id_sps integer,
    date_updat text,
    date_entrd text,
    date_hf text,
    date_path text,
    date_lm text,
    comment text
);
drop table if exists affils;
create table affils (
    id integer primary key,
    descrip text
);
drop table if exists affil_people;
create table affil_people (
    a_id integer,
    p_id integer
);
drop table if exists reports;
create table reports (
    id integer primary key,
    descrip text,
    rep_order text,
    zip_range text,
    format integer,
    last_run text
);
-- format can be one of:
-- 1. first|last|addr1|addr2|city|st_prov|zip_post|country|email
-- 2. first|last|addr1|addr2|city|st_prov|zip_post
-- 3. first|last|addr1|addr2|city|st_prov|zip_post|country
-- 4. first|last|tel_home|tel_work
-- 5. first|last|tel_home

drop table if exists affil_reports;
create table affil_reports (
    report_id integer,
    affiliation_id integer
);
