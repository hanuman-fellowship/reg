drop table if exists people;
create table people (
    last   text,
    first  text,
    sanskrit text,
    addr1    text,
    addr2    text,
    city       text,
    st_prov      text,
    zip_post        text,
    country    text,
    akey text,
    tel_home      text,
    tel_work      text,
    tel_cell      text,
    email text,
    sex text,
    id integer primary key autoincrement,
    id_sps integer,
    date_updat text,
    date_entrd text,
    comment text,
    e_mailings text not null default '',
    snail_mailings text not null default '',
    mmi_e_mailings text not null default '',
    mmi_snail_mailings text not null default '',
    share_mailings text not null default '',
    deceased text not null default '',
    inactive text not null default '',
    cc_number text,
    cc_expire text,
    cc_code   text,
    safety_form text,
    secure_code text
);
drop table if exists affils;
create table affils (
    id integer primary key autoincrement,
    descrip text,
    system text,
    selectable text
);
