drop table if exists people;
create table people (
    last   text,
    first  text,
    sanskrit text,
    addr1    text,
    addr2    text,
    city       text,
    st_prov      text,
    zip_post        text,
    country    text,
    akey text,
    tel_home      text,
    tel_work      text,
    tel_cell      text,
    email text,
    sex text,
    id integer primary key,
    id_sps integer,
    date_updat text,
    date_entrd text,
    comment text,
    mailings integer
);
drop table if exists affils;
create table affils (
    id integer primary key,
    descrip text
);
drop table if exists affil_people;
create table affil_people (
    a_id integer,
    p_id integer
);
