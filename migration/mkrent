drop table if exists rental;
create table rental (
    id          integer primary key autoincrement,
    name        text,
    title       text,
    subtitle    text,
    glnum       text,
    sdate       text,
    edate       text,
    url         text,
    webdesc     text,
    linked      text,
    phone       text,
    email       text,
    comment     text,
    housecost_id integer,
    n_single_bath     integer,
    n_single          integer,
    n_dble_bath       integer,
    n_dble            integer,
    n_triple          integer,
    n_quad            integer,
    n_dormitory       integer,
    n_economy         integer,
    n_center_tent     integer,
    n_own_tent        integer,
    n_own_van         integer,
    n_commuting       integer,

    att_single_bath     text,
    att_single          text,
    att_dble_bath       text,
    att_dble            text,
    att_triple          text,
    att_quad            text,
    att_dormitory       text,
    att_economy         text,
    att_center_tent     text,
    att_own_tent        text,
    att_own_van         text,
    att_commuting       text,

    max               integer,

    balance           integer,  -- for ease of display
                                -- recomputed after each update

    contract_sent     text,     -- date
    sent_by           text,     -- user id
    contract_received text,     -- date
    received_by       text,     -- user id
    tentative         text,

    start_hour        text,
    end_hour          text,

    coordinator_id    integer, -- person id
    lunches           text,
    status            text,
    deposit           integer,
    summary_id        integer
);
drop table if exists rental_payment;
create table rental_payment (
    id integer primary key autoincrement,
    rental_id integer,
    amount integer,
    type text,       -- cc, check, cash, online
    user_id integer,
    the_date text,
    time text
);
drop table if exists rental_charge;
create table rental_charge (
    id integer primary key autoincrement,
    rental_id integer,
    amount integer,
    what text,
    user_id integer,
    the_date text,
    time text
);
