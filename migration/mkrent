drop table if exists rental;
create table rental (
    id          integer primary key autoincrement,
    name        text,
    title       text,
    subtitle    text,
    glnum       text,
    sdate       text,
    edate       text,
    url         text,
    webdesc     text,
    linked      text,
    phone       text,
    email       text,
    comment     text,
    housecost_id integer,
    n_single_bath     integer,
    n_single          integer,
    n_double_bath     integer,
    n_dble            integer,
    n_triple          integer,
    n_quad            integer,
    n_dormitory       integer,
    n_economy         integer,
    n_center_tent     integer,
    n_own_tent        integer,
    n_own_van         integer,
    n_commuting       integer,
    max               integer,

    balance           integer,  -- for ease of display
                                -- recomputed after each update

    contract_sent     text,     -- date
    sent_by           text,     -- user id
    contract_received text,     -- date
    received_by       text,     -- user id
    max_confirmed     text,

    start_hour        text,
    end_hour          text,

    coordinator_id    integer  -- person id
);
drop table if exists rental_payment;
create table rental_payment (
    id integer primary key autoincrement,
    rental_id integer,
    amount integer,
    type text,       -- cc, check, cash, online
    user_id integer,
    the_date text,
    time text
);
drop table if exists rental_charge;
create table rental_charge (
    id integer primary key autoincrement,
    rental_id integer,
    amount integer,
    what text,
    user_id integer,
    the_date text,
    time text
);
