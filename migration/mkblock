drop table if exists block;
create table block (
    id integer primary key autoincrement,
    house_id integer,       -- foreign key to house
    sdate text,
    edate text,
    nbeds integer,
    npeople integer,
    reason text,
    comment text,
    allocated text,
    user_id integer,        -- foreign key to user
    the_date text,
    time text
);
