drop table if exists block;
create table block (
    id integer primary key auto_increment,
    house_id integer,       -- foreign key to house
    sdate text,
    edate text,
    nbeds integer,
    npeople integer,
    reason text,
    comment text,
    allocated text,
    user_id integer,        -- foreign key to user
    the_date text,
    time text,
    program_id integer,     -- one or the other or neither but not both
    rental_id integer,
    event_id integer
);
