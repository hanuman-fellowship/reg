drop table if exists ride;
create table ride (
    id  integer primary key autoincrement,
    rider_id integer,           -- foreign key to People
    driver_id integer,          -- foreign key to User
    from_to text,
    pickup_date text,
    pickup_time text,
    airport text,
    carrier text,
    flight_num text,
    flight_time text,
    cost integer,
    type text,
    comment text,
    paid_date text,
    sent_date text,
    shuttle integer,
    create_date text,
    create_time text,
    status text,
    luggage text,
    intl text default '',
    customs text default ''
);
