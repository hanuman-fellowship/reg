drop table if exists ride;
create table ride (
    id  integer primary key autoincrement,
    rider_id integer,           -- foreign key to People
    driver_id integer,          -- foreign key to User
    from_to text,
    pickup_date text,
    airport text,
    carrier text,
    flight_num text,
    flight_time text,
    cost integer,
    comment text,
    paid_date text
);
