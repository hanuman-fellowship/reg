drop table if exists exception;
create table exception (
    prog_id     integer,
    tag         text,
    value       text
);
drop table if exists string;
create table string (
    the_key     text,
    value       text
);
drop table if exists issue;
create table issue (
    id   integer primary key auto_increment,
    priority text,
    title text,
    notes text,
    date_entered text,
    date_closed text,
    user_id integer
);
