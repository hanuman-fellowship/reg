<h2>People</h2>
<a href="/person/create">Create</a>
&nbsp;&nbsp;&nbsp;
<a href="/person/search">Search</a>
<p>
<a href="/person/update/[% person.id %]">Edit</a>
&nbsp;&nbsp;&nbsp;
<a href="/person/delete/[% person.id %]"
onclick="return confirm('Okay to Delete [% person.first %] [% person.last %]?');">Delete</a>
&nbsp;&nbsp;&nbsp;
[% IF person.id_sps %]
    Partnered with <a href="/person/view/[% partner.id %]">[% partner.first _" "_ partner.last %]</a>
    &nbsp;&nbsp;&nbsp;
    <a href="/person/separate/[% person.id %]"
    onclick="return confirm('Okay to Separate?');">Separate</a>
[% ELSE %]
    <a href="/person/partner/[% person.id %]">Partner With</a>
[% END %]
[% IF Catalyst.check_user_roles('prog_staff') %]
    [% IF is_leader %]
        &nbsp;&nbsp;&nbsp;
        <a href="/leader/view/[% leader.id %]">Leader Info</a>
    [% ELSE %]
        [% IF Catalyst.check_user_roles('prog_admin') %]
            &nbsp;&nbsp;&nbsp;
            <a href="/leader/create/[% person.id %]">Make Leader</a>
        [% END %]
    [% END %]
[% END %]
[% IF Catalyst.check_user_roles('member_admin') %]
    &nbsp;&nbsp;&nbsp;
    [% IF is_member %]
        <a href="/member/update/[% member.id %]">Member Info</a>
    [% ELSE %]
        <a href="/member/create/[% person.id %]">Make Member</a>
    [% END %]
[% END %]
<p>
<table cellpadding=3 border=0>
<tr>
<th align=right>First</th><td>[% person.first %]</td>
<th align=right>Home</td><td>[% person.tel_home %]</td>
</tr>
<tr>
<th align=right>Last</th><td>[% person.last %]</td>
<th align=right>Work</td><td>[% person.tel_work %]</td>
</tr>
<tr>
<th align=right>Sanskrit</th><td>[% person.sanskrit %]</td>
<th align=right>Cell</td><td>[% person.tel_cell %]</td>
</tr>
<tr>
<th align=right>Sex</th><td>[% sex %]</td>
<th align=right valign=top rowspan=4>Comment</td><td rowspan=4 valign=top>[% comment %]</td>
</tr>
<tr><th align=right>Address</th><td>[% person.addr1 %]</td></tr>
<tr><th align=right>&nbsp;</th><td>[% person.addr2 %]</td></tr>
<tr>
<th align=right>City</th><td>[% person.city %]</td>
</tr>
<tr>
<th align=right>State/Province</th><td>[% person.st_prov %]</td>
</tr>
<tr>
<th align=right>Zip/Postal Code</th><td>[% person.zip_post %]</td>
<th align=right>Date Entered</td><td>[% date_entrd %]</td>
</tr>
<tr>
<th align=right>Country</th><td>[% person.country %]</td>
<th align=right>Date Updated</td><td>[% date_updat %]</td>
</tr>
<tr><th align=right>Email</th><td colspan=3 style="width: 2.5in"><a href="mailto:[% person.email %]">[% person.email %]</td></tr>
<tr><th align=right>Mailings</th><td>[% person.mailings %]</td></tr>
<tr><th align=right>Ambiguous</th><td>[% person.ambiguous %]</td></tr>

<tr>
<th align=right valign=top>Affiliations</td>
<!-- not person.affil below -->
<td>
[% FOREACH a IN affils %]
[% a.descrip %]<br>
[% END -%]
</td>
</tr>
</table>
